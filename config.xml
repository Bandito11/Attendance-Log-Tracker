<?xml version='1.0' encoding='utf-8'?>
<widget id="xyz.attendancelog.amaranthus" version="0.6.8" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Attendance Log</name>
    <description>Attendance Management software</description>
    <author email="esteban.a.morales.morales@gmail.com">Esteban Morales</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>Needs access for photo library to use a photo as a picture profile.</string>
    </edit-config>
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/res-android/mipmap-ldpi/icon.png" />
        <icon density="mdpi" src="resources/res-android/mipmap-mdpi/icon.png" />
        <icon density="hdpi" src="resources/res-android/mipmap-hdpi/icon.png" />
        <icon density="xhdpi" src="resources/res-android/mipmap-xhdpi/icon.png" />
        <icon density="xxhdpi" src="resources/res-android/mipmap-xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="resources/res-android/mipmap-xxxhdpi/icon.png" />
        <splash density="land-ldpi" src="resources/res-android/drawable-land-ldpi/screen.png" />
        <splash density="land-mdpi" src="resources/res-android/drawable-land-mdpi/screen.png" />
        <splash density="land-hdpi" src="resources/res-android/drawable-land-hdpi/screen.png" />
        <splash density="land-xhdpi" src="resources/res-android/drawable-land-xhdpi/screen.png" />
        <splash density="land-xxhdpi" src="resources/res-android/drawable-land-xxhdpi/screen.png" />
        <splash density="land-xxxhdpi" src="resources/res-android/drawable-land-xxxhdpi/screen.png" />
        <splash density="port-ldpi" src="resources/res-android/drawable-port-ldpi/screen.png" />
        <splash density="port-mdpi" src="resources/res-android/drawable-port-mdpi/screen.png" />
        <splash density="port-hdpi" src="resources/res-android/drawable-port-hdpi/screen.png" />
        <splash density="port-xhdpi" src="resources/res-android/drawable-port-xhdpi/screen.png" />
        <splash density="port-xxhdpi" src="resources/res-android/drawable-port-xxhdpi/screen.png" />
        <splash density="port-xxxhdpi" src="resources/res-android/drawable-port-xxxhdpi/screen.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-ionic-webview" spec="^2.0.0" />
    <plugin name="cordova-plugin-ionic-keyboard" spec="^2.0.5" />
    <plugin name="cordova-sqlite-storage" spec="^2.5.1" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="cordova-plugin-email-composer" spec="^0.8.15" />
    <plugin name="cordova-plugin-market" spec="^1.2.0" />
    <plugin name="cordova-plugin-file" spec="^6.0.1" />
    <plugin name="cordova-plugin-inapppurchase" spec="^1.2.0" />
    <plugin name="cordova-plugin-file-opener2" spec="^2.0.19" />
    <engine name="android" spec="8.0.0" />
    <engine name="ios" spec="^5.0.0" />
</widget>
